{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "newLine": "LF",
    "lib": ["es2017"],
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "importHelpers": false,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "stripInternal": true,
    "removeComments": true
  },
  "reflectionEnabled": true,
  "exclude": ["node_modules", "es", "lib", "jest.config.ts"]
}
